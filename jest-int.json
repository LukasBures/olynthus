{
  "collectCoverageFrom": [
    "**/src/**/*.(t|j)s",
    "!**/src/**/*spec.(t|j)s",
    "!**/node_modules/**",
    "!**/dist/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 0,
      "functions": 10,
      "lines": 28,
      "statements": -5000
    }
  },
  "coverageDirectory": "<rootDir>/coverage",
  "coverageReporters": ["json", "text"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testTimeout": 90000,
  "testRegex": ".int-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "verbose": true
}
